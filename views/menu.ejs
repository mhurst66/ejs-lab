<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>
  <ul>
    <h2>Mains</h2>
    <% menu.forEach(item => { %>
      <% if (item.category === 'mains') { %>
      <h3><%= item.name %></h3>
      <p>Details: <%= item.details %></p>
      <% if (item.rating === 5) { %>
        ⭐️ Rating: <%= item.rating %>
      <% } else { %>
        Rating: <%= item.rating %>
      <% } %>
      <p>Price: $<%= item.price %>
      <% } %>
    <% }) %>

    <h2>Desserts</h2>
    <% menu.forEach(item => { %>
      <% if (item.category === 'desserts') { %>
      <h3><%= item.name %></h3>
