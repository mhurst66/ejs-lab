      <% if (item.rating === 5) { %>
        ⭐️ Rating: <%= item.rating %>
      <% } else { %>
        Rating: <%= item.rating %>
      <% } %>
      <p>Price: $<%= item.price %></p>
      <% } %>
    <% }) %>

    <h2>Sides</h2>
    <% menu.forEach(item => { %>
      <% if (item.category === 'sides') { %>
      <h3><%= item.name %></h3>
      <p>Details: <%= item.details %></p>
