        ⭐️ Rating: <%= item.rating %>
      <% } else { %>
        Rating: <%= item.rating %>
      <% } %>
      <p>Price: $<%= item.price %></p>
      <% } %>
    <% }) %>
  </ul>
</body>
</html>

